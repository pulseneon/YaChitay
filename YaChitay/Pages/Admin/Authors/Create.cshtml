@page
@model YaChitay.Pages.Admin.Authors.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Author.Name" class="control-label"></label>
                <input asp-for="Author.Name" class="form-control" />
                <span asp-validation-for="Author.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Surname" class="control-label"></label>
                <input asp-for="Author.Surname" class="form-control" />
                <span asp-validation-for="Author.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Patronymic" class="control-label"></label>
                <input asp-for="Author.Patronymic" class="form-control" />
                <span asp-validation-for="Author.Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Nickname" class="control-label"></label>
                <input asp-for="Author.Nickname" class="form-control" />
                <span asp-validation-for="Author.Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Birthplace" class="control-label"></label>
                <input asp-for="Author.Birthplace" class="form-control" />
                <span asp-validation-for="Author.Birthplace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Deathplace" class="control-label"></label>
                <input asp-for="Author.Deathplace" class="form-control" />
                <span asp-validation-for="Author.Deathplace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Description" class="control-label"></label>
                <textarea asp-for="Author.Description" class="form-control"></textarea>
                <span asp-validation-for="Author.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Quote" class="control-label"></label>
                <input asp-for="Author.Quote" class="form-control" />
                <span asp-validation-for="Author.Quote" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Author.IsDead" /> @Html.DisplayNameFor(model => model.Author.IsDead)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Author.DateOfBirth" class="control-label"></label>
                <input asp-for="Author.DateOfBirth" class="form-control" />
                <span asp-validation-for="Author.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.DateOfDeath" class="control-label"></label>
                <input asp-for="Author.DateOfDeath" class="form-control" />
                <span asp-validation-for="Author.DateOfDeath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.WikiUrl" class="control-label"></label>
                <input asp-for="Author.WikiUrl" class="form-control" />
                <span asp-validation-for="Author.WikiUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Photo" class="control-label"></label>
                <input type="file" asp-for="Author.Photo" class="form-control" />
                <span asp-validation-for="Author.Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
