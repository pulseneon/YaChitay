@page
@model YaChitay.Pages.Admin.Authors.CreateModel

@{
    ViewData["Title"] = "Добавить писателя";
}

<h1>Добавление</h1>

<h4>Новый писатель</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model.Name" class="control-label"></label>
                <input asp-for="Model.Name" class="form-control" />
                <span asp-validation-for="Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Surname" class="control-label"></label>
                <input asp-for="Model.Surname" class="form-control" />
                <span asp-validation-for="Model.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Patronymic" class="control-label"></label>
                <input asp-for="Model.Patronymic" class="form-control" />
                <span asp-validation-for="Model.Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Nickname" class="control-label"></label>
                <input asp-for="Model.Nickname" class="form-control" />
                <span asp-validation-for="Model.Nickname" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Model.Photo" class="control-label"></label>
                <input type="file" asp-for="Model.Photo" class="form-control" />
                <span asp-validation-for="Model.Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Birthplace" class="control-label"></label>
                <input asp-for="Model.Birthplace" class="form-control" />
                <span asp-validation-for="Model.Birthplace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Description" class="control-label"></label>
                <input asp-for="Model.Description" class="form-control" />
                <span asp-validation-for="Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Model.IsDead" /> @Html.DisplayNameFor(model => model.Model.IsDead)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Model.DateOfBirth" class="control-label"></label>
                <input asp-for="Model.DateOfBirth" class="form-control" />
                <span asp-validation-for="Model.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.DateOfDeath" class="control-label"></label>
                <input asp-for="Model.DateOfDeath" class="form-control" />
                <span asp-validation-for="Model.DateOfDeath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к писателям</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
